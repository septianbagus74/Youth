<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <corners android:radius="0dp" />

            <solid android:color="@color/md__transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="0dp" />

            <stroke
                android:width="1dp"
                android:color="@color/white" />

            <gradient
                android:angle="-90"
                android:endColor="@color/md__transparent"
                android:startColor="@color/md__transparent" />
        </shape>
    </item>

</layer-list>