<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form_background"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.youth.component.CustomListFragment
                android:id="@+id/level1"
                style="@style/styleMenuButton"
                app:description_menu="@string/level1_desc"
                app:icon_menu="@mipmap/training1"
                app:title_menu="@string/level1" />

            <com.android.youth.component.CustomListFragment
                android:id="@+id/level2"
                style="@style/styleMenuButton"
                android:layout_marginTop="-2dp"
                app:description_menu="@string/level2_desc"
                app:icon_menu="@mipmap/training"
                app:title_menu="@string/level2" />

            <!--<com.android.youth.component.CustomListFragment-->
