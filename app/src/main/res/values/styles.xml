    <style name="styleMenuButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">-2dp</item>
    </style>

    <style name="styleInboxButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="styleManageAccountButton">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="styleDivider">
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="styleMenuDrawerDivider" parent="styleDivider">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="styleFormDefault">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="styleLabelReceipt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="styleValueReceipt" parent="styleLabelReceipt">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>
